{
    "AppConfiguration": {
    "CompanyName": "自动化系统",
    "softwareName":"气密检测监控系统",
    "MachineId": "Station-01",  
    "MachineName": "一号工位电脑"
  },
  "Database": {
    "Provider": "SQLite",
    "SQLite": {
      "ConnectionString": "Data Source=local_data.db;Version=3;"
    }
  },
  "Plugins": {
    "Configuration": {
      "AP.Plugin.Plc.Mitsubishi": {
        "IpAddress": "127.0.0.1",
        "Port": 6000,
        "Timeout": 2000,
        "Version": "Qna_3E",
        "HeartbeatAddress": "D0"
      },
      "AP.Plugin.Scanner": {
        "PortName": "COM10",
        "BaudRate": 9600,
        "Parity": "None",
        "DataBits": 8,
        "StopBits": "One",
        "NewLine": "\r"
      },
      "AP.Plugin.Dashboard.Core": {
        "EnableCpuMonitoring": true,
        "EnableMemoryMonitoring": true
      },
      "AP.Plugin.Dashboard.UI": {
        "RefreshInterval": 1000
      }
    }
  }
}